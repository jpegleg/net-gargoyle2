[Unit]
Description=Track IP addresses and connection state changes along with running processes.
Documentation=https://github.com/jpegleg/net-gargoyle2
After=network.target 
Wants=net-gargoyle.service

[Service]
Type=forking
ExecStart=/usr/local/sbin/net-gargoyle
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s QUIT $MAINPID
PrivateTmp=true

[Install]
WantedBy=multi-user.target
